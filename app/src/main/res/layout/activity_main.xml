<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a7"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextLayout"
        app:layout_constraintBottom_toTopOf="@id/ac"
        android:elevation="4dp"
        android:layout_width="match_parent"
        app:boxBackgroundMode="none"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:cursorVisible="false"
            android:textSize="48dp"
            android:inputType="number"
            android:gravity="end"
            android:textStyle="bold"
            android:fontFamily="@font/major_mono_display"
            android:background="@color/a7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/numara1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/numara4"
        app:layout_constraintEnd_toStartOf="@+id/numara2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numara2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="2"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numara3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara1"
        app:layout_constraintTop_toTopOf="@+id/numara1" />

    <Button
        android:id="@+id/numara3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="3"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ac"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara2"
        app:layout_constraintTop_toTopOf="@+id/numara1" />

    <Button
        android:id="@+id/ac"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="#D94545"
        android:elevation="16dp"
        android:text="AC"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara3"
        app:layout_constraintTop_toTopOf="@+id/numara1" />

    <Button
        android:id="@+id/numara4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="4"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/numara7"
        app:layout_constraintEnd_toStartOf="@+id/numara5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numara5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="5"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numara6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara4"
        app:layout_constraintTop_toTopOf="@+id/numara4" />

    <Button
        android:id="@+id/numara6"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="6"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara5"
        app:layout_constraintTop_toTopOf="@+id/numara4" />

    <Button
        android:id="@+id/plus"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="+"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara6"
        app:layout_constraintTop_toTopOf="@+id/numara4" />

    <Button
        android:id="@+id/numara7"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="7"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/numara0"
        app:layout_constraintEnd_toStartOf="@+id/numara8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/numara8"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="8"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numara9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara7"
        app:layout_constraintTop_toTopOf="@+id/numara7" />

    <Button
        android:id="@+id/numara9"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="9"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara8"
        app:layout_constraintTop_toTopOf="@+id/numara7" />

    <Button
        android:id="@+id/minus"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="-"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara9"
        app:layout_constraintTop_toTopOf="@+id/numara7" />

    <Button
        android:id="@+id/numara0"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="0"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/equals"
        android:layout_width="170dp"
        android:layout_height="85dp"
        android:backgroundTint="@color/c6"
        android:elevation="16dp"
        android:fontFamily="@font/major_mono_display"
        android:text="="
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numara0"
        app:layout_constraintTop_toTopOf="@+id/numara0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pretty Basic Calculator"
            android:fontFamily="@font/ubuntu_light"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="18dp" />
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>